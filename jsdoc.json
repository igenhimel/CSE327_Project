{
    "plugins": ["plugins/markdown"],
    "source": {
        "include":["controllers","middleware","api/controllers","public/scripts","utils","validators","validators/post"],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true
    },
    "opts": {
       
        "destination": "./jsdoc",  
        "recurse": true                 
       
    }
}