<%- include('../../partials/header.ejs') %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.5/croppie.css" integrity="sha512-2eMmukTZtvwlfQoG8ztapwAH5fXaQBzaMqdljLopRSA0i6YKM8kBAOrSSykxu9NN9HrtD45lIqfONLII2AFL/Q==" crossorigin="anonymous" referrerpolicy="no-referrer"
    />
    <div class="bg">
        <h1 class="display-4 text-light text-center title-dis">
            <%= title %>
        </h1>
        <div class="container" id="profile">

            <div class="row mt-3">

                <div class="offset-2 offset-sm-0 col-lg-4">

                    <img src="/images/default.jpg" alt="default" class="  img-fluid img-thumbnail" id="profilepic" name="defaultprofile">
                    <div class="ml-5">
                        <span class="text-light">@</span>
                    </div>

                    <form action="/uploads/ProfilePic" method="POST" enctype="multipart/form-data" id="uploadProfilepic" class="mt-3">


                        <input class="form-control w-75" type="file" name="upload_pp" id="upload_pp" accept="image/*">
                        <input type="button" value="Remove Photo" class="btn btn-danger mt-3" id="removeProfilePic">

                    </form>

                </div>

                <div class="col-12 col-lg-8 mb-5">

                    <div class="card bg-transparent">

                        <div class="card-header bg-light text-light text-center">

                            <strong class="lead text-dark">Create Your Profile Here</strong>

                        </div>

                        <div class="card-body card-bg">


                            <form action="/profile/createProfile" method="POST" id="myprofile">
                                <div id="about">

                                    <div class="row">
                                        <div class="col">
                                            <div class="form-group">

                                                <label for="name" class=" form-label">Your Full Name</label>
                                                <input type="text" class="form-control " name="name" placeholder="Full Name" value="">

                                                <div class="invalid-feedback text-warning">



                                                </div>

                                            </div>
                                        </div>
                                        <div class="col">

                                            <div class="form-group">

                                                <label for="email" class=" form-label">Your Email</label>
                                                <input type="email" class="form-control" name="email" placeholder="Email" value=" " disabled>

                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">

                                        <label for="title" class=" form-label">Add title</label>
                                        <input type="text" class="form-control" name="title" placeholder="Enter title" value="">
                                        <div class="invalid-feedback text-warning">



                                        </div>
                                    </div>

                                    <div class="form-group">

                                        <label for="bio" class=" form-label">Add Short Biography</label>
                                        <textarea name="bio" id="bio" cols="10" rows="3" class="form-control" value=""></textarea>
                                        <div class="invalid-feedback text-warning">



                                        </div>
                                    </div>

                                </div>

                                <div id="social-links">

                                    <label for="links">Your Social Links</label>

                                    <div class=" input-group mt-3">
                                        <div class=" input-group-prepend">
                                            <span class=" input-group-text">
                                            <i class="fab fa-internet-explorer"></i>
                                        </span>
                                        </div>

                                        <input type="text" name="website" id="website" placeholder="Website link" class="form-control " value="">

                                        <div class="invalid-feedback text-warning">



                                        </div>

                                    </div>
                                    <div class=" input-group mt-3">
                                        <div class=" input-group-prepend">
                                            <span class=" input-group-text">
                                            <i class="fab fa-facebook"></i>
                                        </span>
                                        </div>

                                        <input type="text" name="facebook" id="facebook" placeholder="Facebook link" class="form-control " value="">

                                        <div class="invalid-feedback text-warning">



                                        </div>

                                    </div>
                                    <div class=" input-group mt-3">
                                        <div class=" input-group-prepend">
                                            <span class=" input-group-text">
                                            <i class="fab fa-twitter"></i>
                                        </span>
                                        </div>

                                        <input type="text" name="twitter" id="twitter" placeholder="twitter link" class="" value="">
                                        <div class="invalid-feedback text-warning">



                                        </div>

                                    </div>

                                </div>

                                <input type="submit" value="Create Profile" class="btn btn-outline-light mt-3" name="create">

                            </form>
                        </div>


                    </div>

                </div>

            </div>

        </div>

    </div>
    </div>

    <div class="modal fade" id="crop-modal">
        <div class=" modal-dialog">

            <div class="modal-content">
                <div class="modal-header">
                    <strong>Resize Your Image</strong>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="close-crop">
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>

                <div class="modal-body">
                    <div id="cropped-image"></div>
                </div>
                <div class=" modal-footer">
                    <button class="btn btn-dark" id="cancel-crop">Cancel</button>
                    <button class="btn btn-success" id="upload-image">Upload</button>

                </div>
            </div>

        </div>

    </div>


    </div>

    <%- include('../../partials/footer.ejs') %>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.5/croppie.min.js" integrity="sha512-Gs+PsXsGkmr+15rqObPJbenQ2wB3qYvTHuJO6YJzPe/dTLvhy0fmae2BcnaozxDo5iaF8emzmCZWbQ1XXiX2Ig==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
        <script src="/scripts/upload.js"></script>


        </body>

        </html>